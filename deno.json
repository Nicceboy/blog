{
  "tasks": {
    "build": "NODE_ENV=production react-router build",
    "dev": "react-router dev --host 0.0.0.0",
    "format": "deno fmt",
    "lint": "deno lint",
    "start": "deno run -A ./server.production.ts",
    "typecheck": {
      "command": "deno check --node-modules-dir=auto '**/*'",
      "dependencies": ["typegen"]
    },
    "typegen": "react-router typegen && tsc"
  },
  "compilerOptions": {
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "checkJs": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "dom",
      "dom.iterable",
      "dom.window",
      "dom.asynciterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "rootDirs": [".", "./.react-router/types"],
    "types": [
      "vite/client",
      ".react-router/types/**/*"
    ]
  },
  "unstable": ["sloppy-imports"],
  "exclude": ["build/"],
  "nodeModulesDir": "manual",
  "imports": {
    "react-router/": "./.react-router/types/",
    "~/": "./app/",
    "+types/": "./.react-router/types/app/routes/+types/",
    "@std/http": "jsr:@std/http@^1.0.14",
    "@std/path": "jsr:@std/path@^1.0.8"
  }
}
